         <!-- Column 1 -->

         <TextView
             
                      android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:background="#ff000000"
         android:textColor="#ffffffff"
         android:padding="10dip"
         android:layout_margin="4dip"
         android:layout_weight="1"
